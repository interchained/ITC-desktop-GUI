{
  "name": "@interchained/studio",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/main/index.js",
  "description": "Interchained Wallet — Secure desktop wallet for the ITC ecosystem",
  "author": "Interchained LLC. — Mark Evans <dev@interchained.org>",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.interchained.wallet",
    "productName": "Interchained Wallet",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Finance"
    }
  },
  "dependencies": {
    "@interchained/rpc": "workspace:*",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.85.5",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.6.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "22.19.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/recharts": "^2.0.1",
    "@vitejs/plugin-react": "^5.0.1",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "typescript": "^5",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0"
  }
}
